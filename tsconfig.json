{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],

    // Bundler mode
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,

    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.json"],
  "exclude": ["node_modules"]
}
